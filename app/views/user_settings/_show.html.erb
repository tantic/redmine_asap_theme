            </div>
          </div>
        </section>
        <section class="w-3/4 overflow-auto">
          <div class="w-full p-4 flex">
            <div data-action="click->application#hideSettings" class="ml-auto cursor-pointer p-2 rounded-full hover:bg-gray-50">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
              </svg>
            </div>
          </div>

          <div data-tabs-target="tab" id="general" class="p-8">
            <%= render "general" %>
          </div>
          <div data-tabs-target="tab" id="appearance" class="p-8">
            <%= render "appearance" %>
          </div>
          <div data-tabs-target="tab" id="preferences" class="p-8">
            <%= render "preferences" %>
          </div>
          <div data-tabs-target="tab" id="notifications" class="p-8">
            <%= render "notifications" %>
          </div>
        </section>
      </div>


      </div>

    </div>
  </div>
</div>