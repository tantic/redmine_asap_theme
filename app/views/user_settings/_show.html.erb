              <div><%= l(:label_settings_general) %></div>
            </div>
            <div data-tabs-target="btn" id="appearance" data-action="click->tabs#select"  class="tab flex p-2 hover:bg-gray-200 cursor-pointer rounded mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
